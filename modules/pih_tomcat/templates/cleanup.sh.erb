#! /bin/bash

service <%= @tomcat %> stop
echo "tomcat has stopped"
rm -rf <%= @tomcat_home %>/conf/Catalina/localhost/openmrs.xml
echo "openmrs.xml deleted"
rm -rf <%= @tomcat_home %>/logs/*.*
echo "logs deleted"
rm -rf <%= @tomcat_home %>/webapps/openmrs
echo "openmrs webapp deleted"
rm -rf <%= @tomcat_home %>/webapps/openmrs.war
echo "openmrs war deleted"
rm -rf <%= @tomcat_home %>/work/Catalina
echo "work Catalina was deleted"
